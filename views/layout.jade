doctype html
html(lang='zh')
  head
    title= title
    meta(charset='UTF-8')
    link(rel='stylesheet', href='/bower_components/bootswatch/simplex/bootstrap.min.css')
    link(rel='stylesheet', href='/bower_components/font-awesome/css/font-awesome.min.css')
    script(src='/bower_components/jquery/dist/jquery.min.js')
    script(src='/bower_components/bootstrap/dist/js/bootstrap.min.js')
  body
    nav.navbar.navbar-default.navbar-fixed-top
      .container
        .navbar-header
          button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#avbar-collapse')
            span.sr-only Toggle navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.navbar-brand 美居网
        .collapse.navbar-collapse#navbar-collapse
          ul.nav.navbar-nav.navbar-right
            - if(user)
              li.dropdown
                a.dropdown-toggle(href='#', data-toggle='dropdown', role='button', aria-expanded='false') #{user.username}
                  span.caret
                ul.dropdown-menu(role='menu')
                  li
                    a(href='/user/logout') 退出
            - else
              li
                a(href="/user/login") 注册
              li
                a(href="/user/register") 登录
    .container
      block content